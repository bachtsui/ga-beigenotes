<h1>New Notes</h1>

<%= form_for @user, url: "/users/:id/notes/:nid", method: "post" do |f| %>
	<div class="form-group">
		<%= f.label :first_name, "First Name", class: "control-label" %>
		<%= f.text_field :first_name, :required => true, class: "form-control", placeholder: "John" %>
	</div>
	<div class="form-group">
		<%= f.label :phone_number, "Phone Number", class: "control-label" %>
		<%= f.text_field :phone_number, :required => true, class: "form-control", placeholder: "6505358525" %>
	</div>
	<div class="form-group">
		<%= f.submit "Submit", class: "btn btn-default  center-bl form-control" %>
	</div>
<% end %> 




	

