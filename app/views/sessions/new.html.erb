<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
			<h1><span>Login</span></h1>
				<%= form_for @user, url: "/sessions", method: "post" do |f| %>
				<div class="form-group">
			  	<%= f.text_field :email, :required => true, class: "form-control", placeholder: "Email" %>
				</div>
				<div class="form-group">
			  	<%= f.password_field :password, :required => true, class: "form-control", placeholder: "Password" %>
				</div> 
				<div class="form-group">
			  	<%= f.submit "Submit", class: "btn btn-default  center-bl form-control" %> 
				</div>
				<% end %>
  	</div>
  </div>
</div>  	
