<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>You're Creating a New Note Page!</h1>
        <%= form_for @note, url: "/users/#{current_user.id}/notes", method: "post" do |f| %>
      	<%= f.hidden_field :user_id, value: current_user.id %>
      	<%= f.hidden_field :note_id, value: @note.id %>
      <div class="form-group">  
      	<%= f.label "Where did you meet this person (so we can send them a reminder)?" %>
      	<%= f.text_field :aone, :required => true, class: "form-control" %>
      </div>
      <div class="form-group">
      	<%= f.label "What did you like the most about this person?" %>
      	<%= f.text_field :atwo, :required => true, class: "form-control"%>
      </div>
      	 <%= f.submit "Submit", class: "btn btn-default  center-bl form-control" %>
        <% end %>
      </div> 
    </div>  
  </div>   